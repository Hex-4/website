---
const { title = "Project", link = "https://example.com", source, color = "peach", badge } = Astro.props;
---
<div class="w-full outline outline-1 outline-surface2 rounded-md p-6 my-6 bg-mantle motion-preset-expand shadow-md hover:shadow-2xl transition-all hover:-translate-y-2 hover:outline-peach hover:outline-4 hover:bg-base">
    <p class={"text-2xl text-text mb-4" + color}>
        <b></b>
        <a href={link} class={"underline underline-offset-4 transition-all hover:underline-offset-8 duration-200 mb-2 hover:text-" + color}>
            <b>{title}</b>
        </a>


        {badge === 'shipped' && <span class="float-right text-lg bg-green rounded-md px-1 text-crust">shipped</span>}
        {badge === 'dev' && <span class="float-right text-lg outline-dashed outline-1 outline-surface2 rounded-md px-1 text-surface2 mx-3">in dev</span>}
        {badge === 'frozen' && <span class="float-right text-lg bg-lavender rounded-md px-1 text-crust">frozen</span>}
        {badge === 'abandoned' && <span class="float-right text-lg bg-red rounded-md px-1 text-crust">abandoned</span>}
        
        
        
    </p>
    <p class="text-text font-sans w-11/12">
        <slot />
        <br>
        {source && <a class="transition-all underline underline-offset-4 hover:underline-offset-8 hover:text-text text-overlay0" href={"https://github.com/"+source}>Open source.</a>}
    </p>
    
</div>